<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApplication">
        <activity
            android:name=".Splash"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".auth.Register"
            android:exported="true" />
        <activity
            android:name=".auth.Login"
            android:exported="true" />
        <activity
            android:name=".note.EditNote"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".note.AddNote"
            android:exported="true"
            android:label="@string/title_activity_add_notes"
            android:theme="@style/Theme.NoteApplication.NoActionBar" />
        <activity
            android:name=".note.NoteDetails"
            android:exported="true"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.NoteApplication.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>